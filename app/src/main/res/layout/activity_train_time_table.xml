<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_train_time_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent_activity_background"
        tools:context="by.client.android.railwayapp.ui.traintimetable.TrainTimeTableActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/slide1"
            android:scaleType="centerCrop"
            android:layout_gravity="top" />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/arrival_marker"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:tint="@color/tint_default"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Откуда"
                                style="@style/HeaderTextStyle" />

                        <TextView
                                android:id="@+id/departureStation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="введите станцию"
                                android:textSize="22sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/destination_marker"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:tint="@color/tint_default"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Куда"
                                style="@style/HeaderTextStyle" />

                        <TextView
                                android:id="@+id/destinationStantion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="введите станцию"
                                android:textSize="22sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/calendar"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:tint="@color/tint_default"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Дата поездки"
                                style="@style/HeaderTextStyle" />

                        <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="выберите дату"
                                android:textSize="22sp" />

                    </LinearLayout>


                </LinearLayout>


                <Button
                        android:id="@+id/searchStantionButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Найти"
                        android:layout_marginTop="12dp" />

                <Button
                        android:id="@+id/history"
                        android:text="История запросов"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <!--<android.support.design.widget.FloatingActionButton-->
