<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="Тип"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="@dimen/text_size_small"
            android:layout_marginStart="4dp" />

    <TextView
            android:id="@+id/tariffTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginStart="4dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

        <TextView
                android:text="Тариф"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp" />

        <TextView
                android:id="@+id/tariffTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginStart="4dp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер вагона"
                android:layout_weight="4"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/witeText"
                android:textSize="@dimen/text_size_micro" />


        <android.support.v7.widget.RecyclerView
                android:id="@+id/carriageRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center" />

    </LinearLayout>

    <TextView
            android:text="Свободных мест"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_marginStart="4dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/upperPlaceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone">

            <TextView
                    android:text="верхних"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_micro" />

            <TextView
                    android:id="@+id/upperPlaceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/downPlaceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone">

            <TextView
                    android:text="нижних"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_micro" />

            <TextView
                    android:id="@+id/downPlaceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/upperBPlaceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone">

            <TextView
                    android:text="верхних боковых"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_micro" />

            <TextView
                    android:id="@+id/upperBPlaceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/downBPlaceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone">

            <TextView
                    android:text="нижних боковых"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_micro" />

            <TextView
                    android:id="@+id/downBPlaceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

        </LinearLayout>

    </LinearLayout>


    <TextView
            android:text="Номера свободных мест"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp" />

    <TextView
            android:id="@+id/totalPlaceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

</LinearLayout>