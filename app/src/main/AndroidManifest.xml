<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="by.client.android.railwayapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".AndroidApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ShellActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.scoreboard.ScroreboardDetailActivity_"
                android:configChanges="screenSize|screenLayout|orientation" />
        <activity android:name=".ui.traintimetable.TrainRoutesActivity_" />
        <activity android:name=".ui.trainroute.TrainRouteActivity_" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.traintimetable.PlaceInfoActivity_" />
        <activity android:name=".ui.news.NewsActivity_"></activity>
    </application>

</manifest>