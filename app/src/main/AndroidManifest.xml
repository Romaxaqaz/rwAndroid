<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="by.client.android.railwayapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".AndroidApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.scoreboard.ScoreboardActivity" />
        <activity android:name=".ui.scoreboard.ScroreboardDetailActivity" />
        <service android:name=".ui.scoreboard.TimeService" />
        <activity android:name=".ui.trainroute.TrainRouteActivity"/>
        <activity android:name=".ui.traintimetable.TrainTimeTableActivity" />
        <activity android:name=".ui.traintimetable.TrainRoutesActivity" />
        <activity android:name=".ShellActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.traintimetable.SearchStantionActivity"/>
    </application>

</manifest>